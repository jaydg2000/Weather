<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:text="Phoenix, AZ"
        android:ellipsize="end"
        android:textSize="22sp"
        />

    <ImageView
        android:id="@+id/imageViewCurrentDayConditionIcon"
        android:layout_width="154dp"
        android:layout_height="154dp"
        android:src="@drawable/condition_clear"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLocation"/>

    <TextView
        android:id="@+id/textViewCurrentDayTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        android:textSize="52sp"
        android:text="108"
        app:layout_constraintLeft_toRightOf="@+id/imageViewCurrentDayConditionIcon"
        app:layout_constraintTop_toBottomOf="@id/textViewLocation"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        />

    <TextView
        android:id="@+id/textViewLabelCurrentDayLow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:textSize="14sp"
        android:text="Lo"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewCurrentDayTemp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewCurrentDayConditionIcon"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/textViewCurrentDayLow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:textSize="22sp"
        android:text="84"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewCurrentDayTemp"
        app:layout_constraintLeft_toRightOf="@+id/textViewLabelCurrentDayLow"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/textViewLabelCurrentDayHigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:textSize="14sp"
        android:text="Hi"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewCurrentDayConditionIcon"
        app:layout_constraintTop_toBottomOf="@+id/textViewCurrentDayLow"/>

    <TextView
        android:id="@+id/textViewCurrentDayHigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:textSize="22sp"
        android:text="112"
        app:layout_constraintTop_toBottomOf="@+id/textViewCurrentDayLow"
        app:layout_constraintLeft_toRightOf="@+id/textViewLabelCurrentDayHigh"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/textViewLabelCurrentDayHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:textSize="14sp"
        android:text="Humidity"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewCurrentDayHigh"
        app:layout_constraintLeft_toRightOf="@+id/imageViewCurrentDayConditionIcon"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/textViewCurrentDayHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:textSize="22sp"
        android:text="6%"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewCurrentDayHigh"
        app:layout_constraintLeft_toRightOf="@+id/textViewLabelCurrentDayHumidity"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/textViewCurrentDayShortConditionText"
        android:paddingTop="20dp"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textViewCurrentDayHumidity"
        android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>