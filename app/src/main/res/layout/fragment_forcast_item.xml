<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageViewForecastIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/condition_clouds"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/textViewForecastCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toRightOf="@id/imageViewForecastIcon"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Partly Cloudy"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewLabelForecastHigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Hi"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewForecastIcon"
        app:layout_constraintTop_toBottomOf="@id/textViewForecastCondition"
         />

    <TextView
        android:id="@+id/textViewForecastHigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="112"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/textViewLabelForecastHigh"
        app:layout_constraintTop_toBottomOf="@id/textViewForecastCondition"
         />

    <TextView
        android:id="@+id/textViewLabelForecastLow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lo"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/textViewForecastHigh"
        app:layout_constraintTop_toBottomOf="@id/textViewForecastCondition"
        />

    <TextView
        android:id="@+id/textViewForecastLow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="78"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/textViewLabelForecastLow"
        app:layout_constraintTop_toBottomOf="@id/textViewForecastCondition"
        />

    <TextView
        android:id="@+id/textViewForecastDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewForecastIcon"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewForecastIcon" />

    <TextView
        android:id="@+id/textViewForecastHighDegreeSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="&#xb0;"
        app:layout_constraintLeft_toRightOf="@+id/textViewForecastHigh"
        app:layout_constraintTop_toTopOf="@+id/textViewForecastHigh" />

    <TextView
        android:id="@+id/textViewForecastLowDegreeSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="&#xb0;"
        app:layout_constraintTop_toTopOf="@+id/textViewForecastLow"
        app:layout_constraintLeft_toRightOf="@+id/textViewForecastLow"
        android:layout_marginLeft="0dp" />


</android.support.constraint.ConstraintLayout>